                            <TextBlock Text="Add" VerticalAlignment="Center" Margin="10,0,0,0" />

                        </StackPanel>
                    </Button>
                    <Button x:Name="DelBoxBtn" Width="80" Margin="5,0" Style="{StaticResource styleButtonEdit}"  
                                    Click="DelBoxBtn_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="Image/Edit/delete.png" Width="30"  Margin="0,2"/>
                            <TextBlock Text="Del" VerticalAlignment="Center" Margin="10,0,0,0"/>

                        </StackPanel>
                    </Button>
                    <Button x:Name="EditBoxBtn" Width="80" Margin="5,0" Style="{StaticResource styleButtonEdit}"  
                                    Click="EditBoxBtn_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="Image/Edit/edit.png" Width="30"  Margin="0,2"/>
                            <TextBlock Text="Edit" VerticalAlignment="Center" Margin="10,0,0,0"/>

